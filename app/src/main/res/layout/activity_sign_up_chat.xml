<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginChat">

    <ImageView
        android:id="@+id/mLogoIn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/school"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <EditText
        android:id="@+id/mTxtName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/mLogoIn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:hint="Name"
        android:paddingLeft="13dp" />

    <EditText
        android:id="@+id/mTxtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/mTxtName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:hint="Email"
        android:paddingLeft="13dp" />

    <EditText
        android:id="@+id/mTxtUserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/mTxtEmail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:hint="User Name"
        android:paddingLeft="13dp" />

    <EditText
        android:id="@+id/mTxtPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/mTxtUserName"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:paddingLeft="13dp"
        android:background="@drawable/edt_background"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />
    <Button
        android:id="@+id/btnSignUp"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:background="@drawable/btn_background"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTxtPassword"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"/>


</RelativeLayout>